<configuration>

    <appender name="STDOUT" level="debug" class="ch.qos.logback.core.ConsoleAppender"></appender>

    <appender name="FILE" level="warn" class="ch.qos.logback.core.FileAppender">
        <file>log/log.txt</file>
        <encoder>
            <pattern>%d %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="fr.schoolbyhiit.portailsuiviformation" level="warn">
        <appender-ref ref="STDOUT"/>
    </logger>

    <root level="trace">
        <appender-ref ref="FILE"/>
    </root>
</configuration>
